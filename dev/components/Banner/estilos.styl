/*BANNER*/

.Banner
	text-align center
	max-height 90vh
	
	&-item
		text-align center
		max-height 90vh
		position relative
		
		& img
			vertical-align bottom
			width 100%
			max-height 90vh
			
	&-txtContainer
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		
	&-txtOver
		position absolute
		left 35px
		top 35%
		font-family 'CenturyGothicBold', sans-serif
		color white
		text-align left
		
		& h2
			font-size 2.39rem
			margin 0
			
			& span
				font-size 1.91rem
				
	&-btnDown
		position absolute
		bottom 18px
		left 0
		right 0
		color $verde_noia
		font-size 3.5rem
		
		& span.icon-flecha-down
			cursor pointer
			
			&:hover
				font-size 3.8rem
				transicion()

