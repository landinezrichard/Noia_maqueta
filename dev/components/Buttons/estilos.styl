/*BUTTONS*/

//boton base
.Button
	display inline-block
	background-color #7f8c8d
	color #fff
	font-size 1.25em
	margin 20px
	padding 10px 0
	text-align center
	width 200px
	text-decoration none
	box-shadow 0px 3px 0px #373c3c
	
	//margen pra el icono
	
	& span
		margin-right 10px
		
	//con colores
	&.blue
		background-color #3498db
		box-shadow 0px 3px 0px #266792
		
	&.green
		background-color $verde_noia_dark
		box-shadow 0px 0px 0px
		margin 15px 0
		font-size 1.79rem
		font-family 'CenturyGothicBold', sans-serif

	//diferentes medidas
	&.small
		width 110px	

	&.medium
		width 217px
		
	//con efectos
	&.radius
		border-radius 50px
		
	//Hover normal		
	&:hover
		box-shadow 0px 0px 0px
		padding-top 7px

/*BUTTONCAR*/
.ButtonCar
	display inline-block
	margin 20px
	text-align center
	width 100px
	height 33px
	text-decoration none
	font-family 'CenturyGothicRegular', sans-serif	
	color $black_light
	background-color $verde_noia_dark
	// display flex
	// flex-flow row nowrap
	// align-items center
	// justify-content center
	border-radius 5px
	padding 10px 7px 10px 4px
	line-height 33px
	
	& span.icon-carro
		font-size 1.56rem
		vertical-align middle
		
	&-txt
		font-size 0.81rem
		vertical-align middle
		margin-left 13px
		
	&:hover
		text-decoration none
		font-weight 600