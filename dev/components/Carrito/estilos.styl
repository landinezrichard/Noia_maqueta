/*CARRITO*/

.Carrito
	width 100%
	
	& .Page-titleContainer .icon-carro
		float right
		font-size 2.3rem
		margin 23px 30px 15px 10px
		color black
		
	& form
		font-family 'CenturyGothicRegular', sans-serif
		
	&-tabla
		display table
		width 100%
		
	&-tablaHeading
		display table-row
		text-transform uppercase
		font-size 0.87rem
		text-align left
		
		& p
			margin 1em 30px
		
	&-tablaRow
		display table-row
		
	&-tablaCell
		display table-cell
		border-bottom 1px solid $light_gray
		
		&:first-child
			width 40%
			text-align left
			
		& input[type="number"]
			width 50px
			
	&-eliminar
		color black
		text-decoration none
		
		&:hover
			color red
			text-decoration none

	&-thumbnail
		width 60px
		height 60px
		display inline-block
		vertical-align middle
		margin 0 30px
		
		& img
			width 60px
			height 60px
	
	&-name
		display inline-block
		vertical-align middle
		margin 0 20px
		
	&-summary
		
		& .Carrito-tablaCell
			border-bottom none
			
			&:first-child
				width auto
				
		& label
			display inline-block
			vertical-align middle
			margin 0 10px 0 30px
			
		& input[type="text"]
			display inline-block
			vertical-align middle
			width 130px
			border-radius 5px
		
/*Estilos input type number*/

.quantity
	position relative
	display inline-block
	vertical-align middle

	& input[type=number]::-webkit-inner-spin-button
		-webkit-appearance none
		margin 0
	& input[type=number]::-webkit-outer-spin-button
		-webkit-appearance none
		margin 0
	& input[type=number]
		-moz-appearance textfield
	& input
		width 45px
		height 42px
		line-height 1.65
		float left
		display block
		padding 0
		margin 0
		padding-left 20px
		border none
		font-family 'CenturyGothicRegular', sans-serif
		
		&:focus
			outline 0
			
/*elementos agregados con Jquery*/
.quantity-nav
	float left
	position relative
	height 42px

.quantity-button
	position relative
	cursor pointer
	width 20px
	text-align center
	color #333
	font-size 13px
	line-height 1.7
	-webkit-transform translateX(-100%)
	transform translateX(-100%)
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	-o-user-select none
	user-select none

.quantity-button.quantity-up
	position absolute
	height 50%
	top 0

.quantity-button.quantity-down
	position absolute
	bottom -1px
	height 50%