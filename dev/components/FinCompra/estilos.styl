/*FINCOMPRA*/

.FinCompra
	width 100%
	
	// & *
	// 	border 1px solid red
	// 	box-sizing border-box
	
	&-content
		padding 10px
		
	&-left
	&-right
		display inline-block
		vertical-align top
		
	&-left
		text-align left

	&-buttonContainer
		text-align right

	&-button
		background $verde_noia
		color black
		font-family 'CenturyGothicBold', sans-serif
		font-size 0.87rem
		text-transform uppercase
		border none
		border-radius 5px
		padding 9px 38px
		cursor pointer
		transicion()
		margin 20px 0
		
		&:hover
			background $verde_noia_dark
		
	&-tabla
		margin-top 25px
		
		& thead
			text-transform uppercase
			font-family 'CenturyGothicRegular', sans-serif
			font-size 0.87rem
			color black
			
			& tr th
				border 1px solid $light_gray
				
		& tbody
			tr.car_item td
				border 1px solid $light_gray
		& th
		& td
			padding 7px 0
			
		& tr.car_item:nth-child(2n)
			background-color rgba(0,0,0,0.05)
		
		& th.product-price
		& td.product-price
			text-align right

		& tr.car_summary
			text-transform uppercase
			
			td:last-child
				text-align right

		& tr.car_summary:last-child
			font-family 'CenturyGothicBold', sans-serif
			font-size 1rem
			
		& td.product-thumbnail
			vertical-align middle
			text-align left
			width 75px
			
			& a
				width 60px
				height 60px
				display inline-block
				vertical-align middle

			& img
				width 60px
				height 60px
@media screen and (min-width:600px)
	.FinCompra
		&-content
			padding 35px
		
@media screen and (min-width:840px)
	.FinCompra
		
		&-left
			margin-right 50px
		
		&-tabla
			width 100%
			
			& thead
				& tr th
					border none
					border-bottom 1px solid $light_gray

				& th.product-price
					text-align right
					width 120px

				& th.product-quantity
					width 90px
					text-align right

			& tbody
				td.product-name
					text-align left

				td.product-price
				td.product-quantity
					text-align right
					
				tr.car_item td
					border none
					border-bottom 1px solid $light_gray
					
				& tr.car_item:nth-child(2n)
					td
						background-color inherit

			& tr.car_summary
				text-align right
				
			& th
			& td
				padding 15px 0

@media screen and (min-width:960px)
	.FinCompra
		&-content
			padding 0
			
		&-left
			width 28%
			text-align left
			margin-right 50px
			margin-left 7px
		
		&-right
			width 60%
			margin-left 50px