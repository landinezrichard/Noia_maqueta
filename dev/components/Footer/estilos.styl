/*FOOTER*/
.Footer
	width 100%
	background $black_footer
	color white
	
	/*Copyright*/
	&-copy
		width 100%
		display inline-block
		font-weight 400
		font-size 0.59rem
		font-family "CenturyGothicRegular"
		margin-top 30px
		
		& a
			cursor pointer
	
	/*Social*/
	&-social
		font-size 1.12em
		color white
		margin 10px 0 5px
		
		& a
			color white
			cursor pointer
			display inline-block
			margin 0 17px
			
			&:hover
				text-decoration none
				font-size 1.2rem
			
		& a span
			font-size 1.7em
			vertical-align middle
			color white

	/*Menu*/
	&-menu
		width 100%
		margin 30px 0 45px
		display inline-block
		
		& div
			display flex
			justify-content space-around
			
		& div a
			cursor pointer
			color white
			font-size 0.59rem
			font-family "CenturyGothicRegular"