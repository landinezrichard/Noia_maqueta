/*MENU*/
.Menu
	display none
	vertical-align middle
	float right
	width 100%
	
	&-btn
		float right
		vertical-align middle
		display table
		// height 72px
		// margin 8px 12px
		
		& .icon-menu
			display table-cell
			vertical-align middle
			font-size 2em
			color white
			cursor pointer
	
	&-list
		list-style-type none
		margin 0
		padding 0
		display: inline-block;
		width 100%
		
	&-item
		width 100%
		// height 2.5em
		// line-height 2.5em
	
	&-link
		color white
		font-family:"CenturyGothicRegular";
		font-size .87rem
		font-weight 500
		display inline-block
		width 100%
		cursor pointer
		transition all .3s ease
		
		&:hover
			color $verde_noia
			font-weight 600

@media screen and (min-width:840px)
	.Menu
		display inline-block !important
		width auto
		
		&-btn
			display none

		&-list
			display flex
			flex-flow row wrap
			justify-content space-between
			align-items center
			background transparent
			height 100px
		&-item
			display inline-block
			vertical-align middle
			margin 0 10px
			width auto
			height auto
			line-height normal

			// &:last-child
			// 	margin-right 10px
		&-link
			color white